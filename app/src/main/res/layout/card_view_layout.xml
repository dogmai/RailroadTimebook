<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.secondlawapps.railroadtimebook.MissionHistory"
    android:layout_height="300dp"
    android:elevation="20dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:layout_conversion_absoluteX="154dp"
                tools:layout_conversion_absoluteY="16dp"
                tools:layout_conversion_absoluteWidth="103dp"
                tools:layout_conversion_absoluteHeight="26dp"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="154dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewSetDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setdate"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:clickable="true"
                android:textColor="?attr/actionMenuTextColor"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@color/colorAccent"
                tools:layout_conversion_absoluteX="16dp"
                tools:layout_conversion_absoluteY="42dp"
                tools:layout_conversion_absoluteWidth="379dp"
                tools:layout_conversion_absoluteHeight="32dp"
                tools:layout_editor_absoluteY="42dp"
                tools:layout_editor_absoluteX="16dp"
                android:layout_weight="0.05"
                tools:ignore="InefficientWeight" />


            <EditText
                android:id="@+id/editTextTrainSymbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trainsymbol"
                tools:layout_conversion_absoluteX="16dp"
                tools:layout_conversion_absoluteY="74dp"
                tools:layout_conversion_absoluteWidth="379dp"
                tools:layout_conversion_absoluteHeight="42dp"
                tools:layout_editor_absoluteY="74dp"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/editTextEngineNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enginenumbers"
                tools:layout_conversion_absoluteX="16dp"
                tools:layout_conversion_absoluteY="116dp"
                tools:layout_conversion_absoluteWidth="379dp"
                tools:layout_conversion_absoluteHeight="42dp"
                tools:layout_editor_absoluteY="116dp"
                tools:layout_editor_absoluteX="16dp"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/editTextOnDutyLocation"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="fill_horizontal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:hint="@string/ondutylocaiton"
                    tools:layout_conversion_absoluteX="16dp"
                    tools:layout_conversion_absoluteY="158dp"
                    tools:layout_conversion_absoluteWidth="379dp"
                    tools:layout_conversion_absoluteHeight="42dp"
                    tools:layout_editor_absoluteY="158dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:inputType="text"
                    tools:ignore="NestedWeights"
                    android:layout_width="0dp" />


                <TextView
                    android:id="@+id/textViewOndutyTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/ondutytime"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:clickable="true"
                    tools:layout_conversion_absoluteX="16dp"
                    tools:layout_conversion_absoluteY="200dp"
                    tools:layout_conversion_absoluteWidth="379dp"
                    tools:layout_conversion_absoluteHeight="30dp"
                    tools:layout_editor_absoluteY="200dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:ignore="NestedWeights" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/editTextOffDutyLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="fill_horizontal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:hint="@string/offdutylocation"
                    tools:layout_conversion_absoluteX="16dp"
                    tools:layout_conversion_absoluteY="231dp"
                    tools:layout_conversion_absoluteWidth="379dp"
                    tools:layout_conversion_absoluteHeight="42dp"
                    tools:layout_editor_absoluteY="231dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:inputType="text"
                    tools:ignore="NestedWeights" />


                <TextView
                    android:id="@+id/textViewOffDutyTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/offdutytime"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:clickable="true"
                    tools:layout_conversion_absoluteX="16dp"
                    tools:layout_conversion_absoluteY="273dp"
                    tools:layout_conversion_absoluteWidth="379dp"
                    tools:layout_conversion_absoluteHeight="30dp"
                    tools:layout_editor_absoluteY="273dp"
                    tools:layout_editor_absoluteX="16dp" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/editTextSetPay"
                android:hint="@string/pay"
                tools:layout_conversion_absoluteX="16dp"
                tools:layout_conversion_absoluteY="303dp"
                tools:layout_conversion_absoluteWidth="379dp"
                tools:layout_conversion_absoluteHeight="42dp"
                tools:layout_editor_absoluteY="303dp"
                tools:layout_editor_absoluteX="16dp"
                android:maxLines="1"
                android:layout_weight="0.23" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>