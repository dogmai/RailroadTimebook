<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.secondlawapps.railroadtimebook.ProfileActivity"
    tools:showIn="@layout/activity_profile">


    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_conversion_absoluteX="154dp"
        tools:layout_conversion_absoluteY="16dp"
        tools:layout_conversion_absoluteWidth="103dp"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSetDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/setdate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"
        android:textColor="?attr/actionMenuTextColor"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@color/colorAccent"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="42dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserEmail"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/editTextTrainSymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/trainsymbol"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="74dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSetDate"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />


    <EditText
        android:id="@+id/editTextEngineNumbers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/enginenumbers"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="116dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextTrainSymbol"
        app:layout_constraintTop_toBottomOf="@+id/editTextTrainSymbol"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextTrainSymbol" />

    <EditText
        android:id="@+id/editTextOnDutyLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/ondutylocaiton"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="158dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextEngineNumbers"
        app:layout_constraintTop_toBottomOf="@+id/editTextEngineNumbers"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextEngineNumbers" />

    <TextView
        android:id="@+id/textViewOndutyTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ondutytime"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="200dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextOnDutyLocation"
        app:layout_constraintTop_toBottomOf="@+id/editTextOnDutyLocation"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextOnDutyLocation" />


    <EditText
        android:id="@+id/editTextOffDutyLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/offdutylocation"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="231dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewOndutyTime"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewOndutyTime"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewOndutyTime" />

    <TextView
        android:id="@+id/textViewOffDutyTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/offdutytime"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="273dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextOffDutyLocation"
        app:layout_constraintTop_toBottomOf="@+id/editTextOffDutyLocation"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextOffDutyLocation" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/editTextPay"
        android:hint="@string/pay"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="303dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewOffDutyTime"
        app:layout_constraintTop_toBottomOf="@+id/textViewOffDutyTime"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewOffDutyTime" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/saveinformation"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="346dp"
        tools:layout_conversion_absoluteWidth="379dp"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextPay"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPay"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextPay" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        tools:layout_conversion_absoluteX="161dp"
        tools:layout_conversion_absoluteY="394dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSave"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
